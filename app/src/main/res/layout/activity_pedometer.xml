<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/step_bg"
                android:layout_width="match_parent"
                android:layout_height="810dp">

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginTop="239dp"
                            android:layout_height="wrap_content">


                <com.lipy.step.view.StepProgress
                    android:id="@+id/pedometer_progress"
                    android:layout_width="178dp"
                    android:layout_height="178dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    app:antiAlias="false"
                    app:arcWidth="15dp"
                    app:bgArcWidth="15dp"
                    app:startAngle="135"
                    app:sweepAngle="270"
                    app:unit="当前步数"
                    app:unitSize="15sp"
                    app:valueSize="33sp" />

                <TextView android:layout_width="wrap_content"
                          android:textSize="14sp"
                          android:id="@+id/text_step"
                          android:layout_marginTop="166dp"
                          android:gravity="center"
                          android:textColor="#333"
                          android:text="当日走满8000步 "
                          android:layout_centerHorizontal="true"
                          android:layout_height="wrap_content"/>

                <TextView android:layout_width="wrap_content"
                          android:textSize="14sp"
                          android:visibility="gone"
                          android:layout_below="@+id/text_step"
                          android:gravity="center"
                          android:textColor="#333"
                          android:layout_marginTop="5dp"
                          android:text="即可领红包"
                          android:layout_centerHorizontal="true"
                          android:layout_height="wrap_content"/>

            </RelativeLayout>

            <Button android:layout_width="220dp"
                    android:layout_marginTop="18dp"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#fff"
                    android:visibility="gone"
                    android:background="#ccc"
                    android:text="现在还不能领取红包哦"
                    android:layout_height="44dp"/>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:visibility="gone"
                          android:layout_marginTop="50dp"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:textSize="14sp"
                          android:layout_below="@+id/text_step"
                          android:gravity="center"
                          android:textColor="#333"
                          android:layout_marginTop="25dp"
                          android:text="即可领红包"
                          android:layout_centerHorizontal="true"
                          android:layout_height="wrap_content"/>


                <TextView android:layout_width="wrap_content"
                          android:textSize="14sp"
                          android:layout_below="@+id/text_step"
                          android:gravity="center"
                          android:textColor="#333"
                          android:layout_marginTop="5dp"
                          android:text="即可领红包"
                          android:layout_centerHorizontal="true"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</ScrollView>
